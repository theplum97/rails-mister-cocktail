<div class="d-flex flex-column align-items-center background">

  <div class="p-2">
    <h1 class="cocktail-title"><%= @cocktail.name %></h1>
  </div>
  <div class="p-2">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="p-2">
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li class="ingredients">
        <%= dose.ingredient.name %>, <%= dose.description %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this dose?" }  do %><i class="fas fa-trash"></i><% end %>
      </li>
      <% end %>
      <li id="add-ingredient"><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></li>
    </ul>
  </div>

</div>
